{
    "$schema": "https://turborepo.org/schema.json",
    "tasks": {
        "dev": {
            "cache": false,
            "persistent": true
        },
        "build": {
            "outputs": [
                "dist/**",
                "build/**",
                "storybook-static/**"
            ],
            "dependsOn": [
                "^build"
            ]
        }
    }
}